{
  "name": "rex-server",
  "version": "0.1.0",
  "description": "A requirements management backend",
  "main": "server.js",
  "scripts": {
    "prestart": "start mongod",
    "start": "start nodemon ./out/server.js",
    "poststart": "start tsc --watch",
    "stop": "taskkill /IM cmd.exe",
    "poststop": "mongo admin --eval \"db.getSiblingDB('admin').shutdownServer()\"",
    "pretest": "start mongod",
    "test": "mocha --requre ts-node/register \"./out/tests/**/*.js\"",
    "posttest": "mongo admin --eval \"db.getSiblingDB('admin').shutdownServer()\"",
    "tsc": "tsc"
  },
  "author": "sweiner",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "mongoose": "^5.1.0",
    "npm": "^6.1.0",
    "rfc6902": "^2.2.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/express": "^4.11.1",
    "@types/mocha": "^5.2.0",
    "@types/mongodb": "^3.0.18",
    "@types/mongoose": "^5.0.13",
    "@types/node": "^10.0.8",
    "@types/request": "^2.47.0",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "request": "^2.87.0",
    "ts-node": "^6.0.5",
    "typescript": "^2.8.3"
  }
}
